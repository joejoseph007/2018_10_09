    {
        p
        {
            relTol 0;
            tolerance 1e-4;
        }

        U
        {
            relTol 0;
            tolerance 1e-5;
        }
    }
*/
}

relaxationFactors
{
    fields
    {
        p               0.8;
        pFinal          1;
    }
    equations
    {
        "(k|S|omega|U)"           0.8;
        "(k|S|omega|U)Final"      1;
    }
}


